<% flash.each do |type, message| %> 
<%=show_alert(type, message)%>
<% end %>
<%=form_for company, url: url,html: { class: "mx-auto", data: {turbo: false }  } do |f|%>
<div class="form-group">
  <%= f.label :name, class: "block mb-2 text-sm font-medium text-gray-900
  dark:text-white" %>
  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Enter the name of the company", class:
    "form-control border border-gray-300 text-gray-900 text-sm rounded-lg
    focus:ring-blue-500 focus:border-blue-500 block p-2.5 w-150" %>
  </div>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
</div>

<div class="form-group mt-5 fex items-center">
  <%=link_to "Cancel", :back, class:"mr-2 py-2.5 px-5 me-2 mb-2 
  text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg 
  border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 "%>
  <%= f.submit 'Save', class: 'text-white bg-blue-700
  hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300
  font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center' %>
  
</div>
<% end %>
